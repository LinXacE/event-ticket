# Event Ticket System Environment Configuration

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=event_ticket_system
DB_USER=root
DB_PASSWORD=your_database_password

# Encryption Configuration
ENCRYPTION_KEY=CHANGE_THIS_SECRET_KEY_FOR_QR_ENCRYPTION

# QR Code & Barcode Settings
QR_CODE_DIR=static/qr_codes
BARCODE_DIR=static/barcodes
UPLOAD_FOLDER=static/uploads

# Security Settings
MAX_VALIDATION_ATTEMPTS=3
PASS_EXPIRY_DAYS=30
SESSION_PERMANENT=False
SESSION_TYPE=filesystem

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password

# Application Settings
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,pdf
